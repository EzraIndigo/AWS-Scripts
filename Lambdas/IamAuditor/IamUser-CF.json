{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "IAMR4R0SL": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "IamAuditor",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": "arn:aws:iam::MASTERACCOUNT-ID:role/service-role/IamAuditor-role-gsajhqm6"
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "Iam-Audit",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "iam:*"
                                    ],
                                    "Resource": [
                                        "*"
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}